# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true

[*.java]
indent_size = 4
trim_trailing_whitespace = true

[*.{xml, yml, yaml}]
indent_size = 2
trim_trailing_whitespace = true
